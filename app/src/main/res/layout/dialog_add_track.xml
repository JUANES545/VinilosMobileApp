<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Campo para Nombre de la Canción -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_track_name_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="@string/nombre_de_la_canci_n">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para Duración (opcional) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_track_duration_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/duraci_n_opcional">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_track_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
